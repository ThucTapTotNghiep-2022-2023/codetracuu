<Window x:Class="tracuu.dn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tracuu"
        mc:Ignorable="d"
        Title="dn" Height="450" Width="800">
    <StackPanel>
        <Label> Đăng nhâp</Label>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
               
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Tên đăng nhập"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Mật khẩu"/>
                
            <TextBox Grid.Row="0" Grid.Column="1"/>

            <TextBox Grid.Row="1" Grid.Column="1"/>
            
        </Grid>
        <Button Content="Đăng nhâp" x:Name="btnDangnhap" />
    </StackPanel>
</Window>
